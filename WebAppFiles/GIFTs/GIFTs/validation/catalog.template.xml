  <!-- Other non-IWXXM schemas from schemas.wmo.int -->
  <rewriteSystem systemIdStartString="http://schemas.wmo.int" rewritePrefix="${INSTALL_DIR}/externalSchemas/schemas.wmo.int"/>

  <!-- OGC/ISO Schemas -->
  <rewriteSystem systemIdStartString="http://schemas.opengis.net" rewritePrefix="${INSTALL_DIR}/externalSchemas/schemas.opengis.net"/>

  <!-- AIXM 5 -->
  <rewriteSystem systemIdStartString="http://www.aixm.aero/schema" rewritePrefix="${INSTALL_DIR}/externalSchemas/aero/aixm"/>

  <!-- W3C -->
  <rewriteSystem systemIdStartString="http://www.w3.org" rewritePrefix="${INSTALL_DIR}/externalSchemas/org/w3c"/>
  
</catalog>
